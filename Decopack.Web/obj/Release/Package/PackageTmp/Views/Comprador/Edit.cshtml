@model Decopack.EE.Comprador

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">En esta pagina se realiza la edicion del comprador seleccionado.</p><br />

    </div>
</form>

<h2>Editar Comprador</h2>

