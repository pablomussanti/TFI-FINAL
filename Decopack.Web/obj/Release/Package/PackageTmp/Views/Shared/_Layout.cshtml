<html>
<head>
    <title>@Recursos.Recurso.decopacks</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="~/Content/main.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/SiteHelp.css" rel="stylesheet" />

</head>
<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">

                <!-- Header -->
                <header id="header">
                    <a class="logo"><strong>@Recursos.Recurso.decopacks</strong> @Recursos.Recurso.DiseñoyFabricacion</a>
                </header>

                <!-- Banner -->
                <section>
                    <div class="content">

                        @RenderBody()


                    </div>

                </section>



            </div>
        </div>

        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">

                <!-- Search -->
                <section class="alt">

                    <img src="~/Content/logo.png" width="325" height="200" align="middle" />

                </section>

                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <h2>@Recursos.Recurso.Menu</h2>
                    </header>
                    <ul>

                        <li>@Html.ActionLink(Recursos.Recurso.Inicio, "Index", "Home")</li>

                        <li>@Html.ActionLink(@Recursos.Recurso.catalogo, "Catalogo", "Producto")</li>
                        <li>
                            <span class="opener">@Recursos.Recurso.OperacionesPrincipales</span>
                            <ul>
                                @Html.Partial("_MenuPartial")
                            </ul>
                        </li>


                        @if (User.IsInRole("EncargadoDeposito"))
                        {
                            <li>
                                <span class="opener">@Recursos.Recurso.Stock</span>
                                <ul>
                                    @Html.Partial("_MenuPartialStock")
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("EmpleadoSucursal") || User.IsInRole("EncargadoDeposito"))
                        {
                            <li>
                                <span class="opener">@Recursos.Recurso.Entidades</span>
                                <ul>
                                    @Html.Partial("_MenuPartialEntidades")
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <span class="opener">@Recursos.Recurso.Areas</span>
                                <ul>
                                    @Html.Partial("_MenuPartialArea")
                                </ul>
                            </li>
                        }

                        <li>
                            <span class="opener">Sesion</span>
                            <ul>
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </li>


                    </ul>
                </nav>


                <!-- Footer -->
                <footer id="footer">
                    <p>&copy; @DateTime.Now.Year - @Recursos.Recurso.decopacks </p>
                </footer>

            </div>
        </div>

    </div>

   

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/browser.min.js"></script>
    <script src="~/Scripts/breakpoints.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/main.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
