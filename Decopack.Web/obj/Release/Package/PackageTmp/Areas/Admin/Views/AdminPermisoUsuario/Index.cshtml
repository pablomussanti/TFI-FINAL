@model IEnumerable<Decopack.Servicios.Permisousuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">Aqui se muestra los permisos que contiene cada usuario</p><br />

    </div>
</form>

<h2>Lista de Permisos Asignados a Usuarios:</h2>

<p>
    @Html.ActionLink("Asignar Nuevo Permiso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.usuario.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.permiso.Nombre)
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Eliminar", new { roleid=item.RoleId, userid = item.UserId })
        </td>
    </tr>
}

</table>
