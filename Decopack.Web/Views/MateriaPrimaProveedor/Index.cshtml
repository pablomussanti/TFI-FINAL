@model IEnumerable<Decopack.EE.MateriaPrimaProveedor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">Aqui se muestra los proveedores junto con el precio que proveen la materia prima</p><br />

    </div>
</form>

<h2>Listar Materia Prima - Proveedor:</h2>    


<table class="table">
    <tr>
        <th>
            Nombre de la Materia Prima
        </th>
        <th>
           Nombre del proveedor
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MateriaPrima.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class = "button" })
        </td>
    </tr>
}

</table>
