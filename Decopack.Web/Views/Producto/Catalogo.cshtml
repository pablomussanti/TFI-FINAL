@model IEnumerable<Decopack.EE.Producto>

@{
    ViewBag.Title = "Catalogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
                       <p class="help">@Recursos.Recurso.catalogo1 </p><br />

    </div>
</form>


<header >
    <h1>@Recursos.Recurso.catalogodeproductos</h1>
</header>
<div class="posts">
    @foreach (var item in Model)
    {
    <article>
        <a href="#" class="image"><img src="@Url.Action("getimage", "Producto", new { id = item.Id })" alt="" width="400" height="350" /></a>
        <h2>@Html.DisplayFor(modelItem => item.Nombre)</h2>
        <p>@Html.DisplayFor(modelItem => item.Descripcion)</p>
        <h3>@Html.DisplayFor(modelItem => item.Precio) $</h3>
        <ul class="actions">
            <li>@Html.ActionLink(@Recursos.Recurso.hacerpedido, "Create", "Pedido", new { CodProducto = item.Id }, new { @class = "button" })</li>
        </ul>
    </article>

    }
    </div>
