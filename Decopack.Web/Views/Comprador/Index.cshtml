@model IEnumerable<Decopack.EE.Comprador>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">Aqui se encuentran todos los compradores cargados en el sistema</p><br />

    </div>
</form>


<h2>Lista de Compradores:</h2>
<p>
    @Html.ActionLink("Ver Compradores Dados De Baja ", "IndexBaja", null, new { @class = "button" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SocioEstado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domicilio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocioEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domicilio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "button" }) 
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "button" }) 
                @if (item.SocioEstado == "Si")
                {
                    @Html.ActionLink("Dar de Baja Socio", "BajaSocio", new { id = item.Id }, new { @class = "button" })
                }
                else
                {
                    @Html.ActionLink("Establecer Socio", "AltaSocio", new { id = item.Id }, new { @class = "button" }) 
                }

            </td>
        </tr>
    }

</table>
