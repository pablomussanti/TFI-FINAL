@model IEnumerable<Decopack.EE.MateriaPrima>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">Aqui se muestra la materia prima cargada en el sistema</p><br />

    </div>
</form>


<h2>Lista de Materia Prima</h2>

<p>
    @Html.ActionLink("Crear Nueva Materia Prima", "Create",null, new { @class = "button" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Asignar a Producto", "Create", "MateriaPrimaProducto", new { id = item.Id },  new { @class = "button" }) 
            @Html.ActionLink("Asignar Proveedor", "Create", "MateriaPrimaProveedor", new { id = item.Id }, new { @class = "button" }) 
            @Html.ActionLink("Reposicion", "Create", "Reposicion", new { id = item.Id }, new { @class = "button" })
        </td>
    </tr>
}

</table>
