@model IEnumerable<Decopack.EE.StockMateriaPrimaDeposito>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">Aqui se muestra el stock de la materia prima en el deposito</p><br />

    </div>
</form>

<h2>Listado de Stock de Materia Prima:</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MateriaPrima.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deposito.Detalle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MateriaPrima.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deposito.Detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "button" }) 
        </td>
    </tr>
}

</table>
