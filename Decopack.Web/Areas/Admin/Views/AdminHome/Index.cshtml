
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form>
    <div id="container">
        <label></label><span class="helpButton button">@Recursos.Recurso.mensajeayuda</span>
        <p class="help">Aqui se muestran en forma resumidas las actividades del negocio</p><br />

    </div>
</form>


<h2>Graficos De Resumen</h2>


<div id="chart_div"></div>

<p>
    <h3> Producto Mas Vendido = @ViewBag.productomasvendido</h3>
</p>

<p>
    <h3> Total Recaudado = $ @ViewBag.totalrecaudado </h3>
</p>

<p>
    <h3> Gastos Totales = $ @ViewBag.totalgastado </h3>
</p>
<p>
    <h3> Ganancia Neta = $ @ViewBag.ganancianeta</h3>
</p>
<p>
    <h3> Productos Vendidos = @ViewBag.cantidaddeproductos</h3>
</p>
<p>
    <h3> Cantidad De Materia Prima Comprada = @ViewBag.cantidaddemateriaprima</h3>
</p>

@section Scripts{

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

        // Load the Visualization API and the corechart package.
        google.charts.load('current', { 'packages': ['corechart'] });

        // Set a callback to run when the Google Visualization API is loaded.
        google.charts.setOnLoadCallback(drawChart);

        // Callback that creates and populates a data table,
        // instantiates the pie chart, passes in the data and
        // draws it.
        function drawChart() {

            // Create the data table.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Topping');
            data.addColumn('number', 'Slices');
            data.addRows([
                ['Pepe', 25254.54],
                ['Jose', 12542.89],
            ]);

            // Set chart options
            var options = {
                'title': 'Mejor Proveedor',
                'width': 800,
                'height': 600
            };

            // Instantiate and draw our chart, passing in some options.
            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);

        }

    </script>
}
